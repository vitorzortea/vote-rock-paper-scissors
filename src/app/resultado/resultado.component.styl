#resultado
  min-height: 100vh
  background: url('/assets/img/bg-3.jpg')
  background-position: center
  background-size: cover
  color: white
  display: flex
  flex-direction: column
  overflow hidden

  &>p
    background-color: rgba(0,0,0,0.3)
    display: table
    margin: 10px auto 20px
    font-size: 42px
    padding: 10px 30px
    font-weight: bolder

  main
    flex: auto
    display: flex
    width: 100%

    &>div
      display: flex
      flex-direction: column
      align-items: flex-start
      justify-content: space-between
      flex: auto

      &>span img
        max-width: 500px
        animation show-card-play .4s linear 0s forwards;

      &:nth-child(1)
        padding: 20px 20px 20px 0

      &:nth-child(2)
        padding: 20px 0 20px 20px
        align-items: flex-end

        &>span
          transform: scaleX(-1)

@keyframes show-card-play
	0%
		transform translate(-100%, 0)
	100%
		transform translate(0, 0)
